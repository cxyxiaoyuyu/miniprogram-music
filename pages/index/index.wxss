/* 搜索 */
.search {
  background:#d43c33;
  box-sizing: border-box;
} 
.search .input {
  color: #f7f3f3;
  border: 1px solid #f7f3f3;
  width: 55%;
  margin-left: 40rpx;
  margin-top: 16rpx;
  font-size: 24rpx;
  height: 50rpx;
  border-radius: 50rpx;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}
.search .input .iconfont {
  padding-right: 30rpx;
}

/* 轮播图 */
.banner image{
  width: 100%;
  height: calc(750rpx * 420 / 1080);
}
.navContainer {
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  font-size: 26rpx;
}
.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240,19,19);
  border-radius: 50%;
  font-size: 50rpx;
  color: white;
  margin: 20rpx 0;
}
.recommentContainer{
  padding: 20rpx;
}


.recommentScroll {
  display: flex;
  margin-top: 20rpx;
  /* border: 1px solid red; */
  height: 280rpx;
}
.scroll-item {
  width: 200rpx;
  margin-right: 20rpx;
}
.scroll-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scroll-item text {
  font-size: 26rpx;

  /* 单行文本溢出 */
  /* white-space: nowrap; */
  /* display: block;  /* 块级元素才可以overflow hidden */
  /* overflow: hidden; */
  /* text-overflow: ellipsis; */

   /* 多行文本溢出 */
   overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 2;
}

/* 排行榜 */
.topList {
  padding: 20rpx;
}
.topList .topItem {
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}
.topItem:nth-child(2) {
  background: rgba(249,215,215,0.5);
  color: #dc3552;
}
.topItem:nth-child(3) {
  background: rgba(217,238,241,0.5);
  color:#16b2c5;
}
.topItem:nth-child(4) {
  background: rgba(245,230,208,0.5);
  color: #e8ba2f;
}
.topItem:nth-child(5) {
  background: rgba(226,247,245,0.5);
  color: #29d2c2;
}
.topItem .left {
  display: flex;
  flex-direction: column;
  font-size: 36rpx;
  margin-right: 160rpx;
}
.topItem .imgWrap {
  position: relative;
  height: 120rpx;
  margin-top: 10rpx;
}
.topItem image {
  border-radius: 10rpx;
  position: absolute;
}
.topItem .firstImg {
  width: 110rpx;
  height: 110rpx;
  margin-top: 10rpx;
  z-index: 3;
  left: 0;
  bottom: 0;
}
.topItem .secondImg {
  width: 90rpx;
  height: 90rpx;
  z-index:2;
  bottom: 0;
  left: 40rpx;
  opacity: 0.5;
}
.topItem .thirdImg {
  width:70rpx;
  height: 70rpx;
  z-index: 1;
  bottom: 0;
  left: 80rpx;
  opacity: 0.2;
}

.topItem .right {
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #000;
}
.topItem .right text{
  padding: 8rpx 0;
}
